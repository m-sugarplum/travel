<%- include('partials/head.ejs') %>

    <body class="body-destinations">
        <%- include('partials/navbar.ejs') %>
            <div class="container text-center container-destinations">
                <h1 class="text-center pt-5 pb-3 h1-destinations">Mexico</h1>

                <% let length=numOfPlaces %>


                    <% for (let i=1; i < length+1; i++) { %>
                        <% let place=(listOfPlaces[i-1])%>

                            <% if (i==1) { %>

                                <div class="row justify-content-center pt-5">
                                    <div class="col-xs-12 col-lg-6 col-xl-4 pb-5">

                                        <img src="<%=placesMexico[place].img%>" alt="" class="img-thumbnail">
                                        <h3 class="h3-destinations">
                                            <%=placesMexico[place].placeName%>
                                        </h3>
                                    </div>

                                    <% } else if (i%2==0 && i !==1) { %>
                                        <div class="col-xs-12 col-lg-6 col-xl-4 pb-5">

                                            <img src="<%=placesMexico[place].img%>" alt="" class="img-thumbnail">

                                            <h3 class="h3-destinations">
                                                <%=placesMexico[place].placeName%>
                                            </h3>

                                        </div>
                                </div>
                                <div class="row justify-content-center">
                                    <% } else if (i%2!==0 && i !==1) {%>
                                        <div class="col-xs-12 col-lg-6 col-xl-4 pb-5">

                                            <img src="<%=placesMexico[place].img%>" alt="" class="img-thumbnail">
                                            <h3 class="h3-destinations">
                                                <%=placesMexico[place].placeName%>
                                            </h3>
                                        </div>

                                        <%} else { %>
                                            console.log ("Error with looping - img display")
                                            <% } %>
                                                <%} %>

                                </div>
            </div>

    </body>

    </html>